<h2>Sign up</h2>

<%= form_for("user", :html => { :class => "uniForm"}, :url => user_session_path ) do |f| %>  
  <fieldset class="inlineLabels">
    <div class="ctrlHolder">
      <%= f.label :email %>
      <%= f.text_field :email, :class => "textInput" %>
    </div>
    
    <div class="ctrlHolder">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "textInput" %>
    </div>

    <div class="buttonHolder">
      <label class="secondaryAction" for="user_remember_me"><input type="checkbox" id="user_remember_me" name="user_remember_me"> Remember me</label>
      <%= f.submit 'Sign in', :class => "primaryAction" %>
    </div>
  </fieldset>
  
  <%= link_to "Forgot your password?", new_password_path('user') %>
<% end %>
<br>