<%= form_for("user", :html => { :class => "uniForm"}, :url => user_registration_path ) do |f| %>  
  <fieldset class="inlineLabels">
    <div class="ctrlHolder">
      <%= f.label :email %>
      <%= f.text_field :email, :class => "textInput" %>
    </div>
    
    <div class="ctrlHolder">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "textInput" %>
    </div>
    
    <div class="ctrlHolder">
      <%= f.label "Re-enter Password" %>
      <%= f.password_field :password_confirmation, :class => "textInput" %>
    </div>
        
    <div class="buttonHolder">
      <%= f.submit 'Sign up', :class => "primaryAction" %>
    </div>
  </fieldset>
<% end %>
<br>